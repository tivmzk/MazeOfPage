<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="novel">
	<sql id="search">
		<where>
			<if test="search == 1">
				n.title LIKE CONCAT('%', #{keyword}, '%')
			</if>
			<if test="search == 2">
				n.member LIKE CONCAT('%', #{keyword}, '%')
			</if>
			<if test="search == 3">
				n.genre=(SELECT CODE FROM genre WHERE contents LIKE CONCAT('%', #{keyword}, '%'))
			</if>
		</where>
	</sql>
	<sql id="order">
		<if test="order==0">
			ORDER BY date
		</if>
		<if test="order==1">
			ORDER BY recom DESC
		</if>
	</sql>
	<insert id="add">
		INSERT INTO novel
		VALUES(NULL, #{member}, #{genre}, #{title}, #{info}, #{recom}, NOW())
	</insert>
	<select id="list" resultType="Novel">
		SELECT n.*, m.nickname, g.contents AS genreContents, (SELECT COUNT(*) FROM bookmark b WHERE n.code=b.novel) AS bookmark
		FROM novel n
		JOIN genre g ON g.code=n.genre
		JOIN member m ON m.id=n.member
		<include refid="search" />
		<include refid="order" />
		LIMIT #{offset}, #{perPage}
	</select>
	<select id="total" resultType="Integer">
		SELECT COUNT(*)
		FROM novel n
		<include refid="search" />
	</select>
</mapper>