<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="episode">
	<sql id="search">
		<where>
			<if test="search == 1">
				e.novel=#{keyword}
			</if>
			<if test="search == 2">
				e.is_start=#{keyword} AND e.novel=${keyword2}
			</if>
		</where>
	</sql>
	<sql id="order">
		<if test="order == 1">
			ORDER BY e.is_start, e.date DESC
		</if>
	</sql>
	
	<resultMap type="Episode" id="EpisodeMap">
		<id column="code" property="code"/>
		<result column="novel" property="novel"/>
		<result column="title" property="title"/>
		<result column="contents" property="contents"/>
		<result column="is_start" property="isStart"/>
		<result column="date" property="date"/>
		<result column="member" property="member"/>
		<collection javaType="ArrayList" ofType="Option" column="option" property="options">
			<id column="code" property="code"/>
			<result column="mepisode" property="mepisode"/>
			<result column="oepisode" property="oepisode"/>
			<result column="action" property="action"/>
		</collection>
	</resultMap>
	
	<select id="total" resultType="Integer">
		SELECT COUNT(*)
		FROM episode
		WHERE novel=#{code}
	</select>
	<select id="list" resultMap="EpisodeMap">
		SELECT e.*, n.member AS member, o.*
		FROM episode e
		JOIN novel n ON n.code=e.novel
		LEFT OUTER JOIN option o ON o.mepisode=e.code
		<include refid="search" />
		<include refid="order" />
		LIMIT #{offset}, #{perPage}
	</select>
	<select id="item" resultType="Episode">
		SELECT *
		FROM episode e
		<include refid="search"></include>
	</select>
	<insert id="add">
		INSERT INTO episode
		VALUES(NULL, #{novel}, #{title}, #{contents}, #{isStart}, NOW())
		
		<selectKey keyProperty="code" resultType="Integer" order="AFTER">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>
	<delete id="delete">
		DELETE FROM episode
		WHERE code=#{code}
	</delete>
</mapper>