<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="episode">
	<sql id="search">
		<where>
			<if test="search == 1">
				novel=#{keyword}
			</if>
			<if test="search == 2">
				is_start=#{keyword} AND novel=${total}
			</if>
		</where>
	</sql>
	<sql id="order">
		<if test="order == 1">
			ORDER BY date DESC
		</if>
	</sql>
	<select id="total" resultType="Integer">
		SELECT COUNT(*)
		FROM episode
		WHERE novel=#{code}
	</select>
	<select id="list" resultType="Episode">
		SELECT *
		FROM episode
		<include refid="search" />
		<include refid="order" />
		LIMIT #{offset}, #{perPage}
	</select>
	<select id="item" resultType="Episode">
		SELECT *
		FROM episode
		<include refid="search"></include>
	</select>
	<insert id="add">
		INSERT INTO episode
		VALUES(NULL, #{novel}, #{title}, #{contents}, #{isStart}, NOW())
		
		<selectKey keyProperty="code" resultType="Integer" order="AFTER">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>
</mapper>