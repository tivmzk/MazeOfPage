<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="thumbnail">
	<insert id="add">
		INSERT INTO thumbnail
		VALUES(#{novel}, #{uuid}, #{filename})
	</insert>
	<delete id="delete">
		DELETE FROM thumbnail
		WHERE novel=${code}
	</delete>
	<select id="item" resultType="Thumbnail">
		SELECT *
		FROM thumbnail
		WHERE novel=#{code}
	</select>
</mapper>