<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration 
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>
	<typeAliases>
		<package name="kr.ac.hairou.model"/>
	</typeAliases>
  	
	<!-- alias를 사용할 파일 위치-->
	<mappers>
		<mapper resource="mappers/novel.xml"/>
		<mapper resource="mappers/genre.xml"/>
		<mapper resource="mappers/notice.xml"/>
		<mapper resource="mappers/member.xml"/>
		<mapper resource="mappers/thumbnail.xml"/>
		<mapper resource="mappers/recommend.xml"/>
		<mapper resource="mappers/bookmark.xml"/>
		<mapper resource="mappers/episode.xml"/>
		<mapper resource="mappers/option.xml"/>
		<mapper resource="mappers/profile.xml"/>
		<mapper resource="mappers/review.xml"/>
		<mapper resource="mappers/comments.xml"/>
	</mappers>
</configuration>